<h1>Posts for Assignment: <%=@assignment.title%></h1>
<table class='table table-bordered'>
  <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Number of Comments</th>
        <th>Last Updated</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, post %></td>
          <td style="font-family: TimesNewRoman, 'Times New Roman', Times, Baskerville, Georgia, serif;"><%= post.user.name%></td>
          <td style="font-family: TimesNewRoman, 'Times New Roman', Times, Baskerville, Georgia, serif;"><%= post.numberofcomments%></td>
          <td style="font-family: TimesNewRoman, 'Times New Roman', Times, Baskerville, Georgia, serif;"><%= time_ago_in_words(post.updated_at)%> ago</td>
        </tr>
      <% end %>
    </tbody>
</table>